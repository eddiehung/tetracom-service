= content_tag_for(:li, conversation) do |conversation|
  %p
    = link_to conversation.subject, conversation_path(conversation.id)
    |
    - if conversation.is_completely_trashed_or_deleted?(current_user)
      = link_to 'Delete permanantly', delete_conversation_path(conversation.id), method: :post
      |
      = link_to 'Untrash all', untrash_conversation_path(conversation.id), method: :post
    - else
      = link_to 'Trash all', trash_conversation_path(conversation.id), method: :post
