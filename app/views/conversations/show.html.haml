%h1= conversation.subject
<%= will_paginate %>
%table{:class => "table table-striped"}
    %tr
        %th{:width => "20%"} Recipient
        %th{:width => "30%"} Subject
        %th{:width => "30%"} Body
        %th{:width => "20%"} Date & Time
    = content_tag_for(:tr, conversation.receipts_for(current_user)) do |receipt|
        - message = receipt.message
        %td= message.recipients.select{|recipient| recipient.name != message.sender.name}.first.name
        %td= message.subject
        %td= message.body
        %td= message.created_at
%br
<%= will_paginate %>
= render 'messages/form', conversation: conversation
