<tr>
	<td>
		<%= gravatar_for user, size: 52 if current_user?(user)||user.show_name==true %>
		<%= link_to ( current_user?(user)||user.show_name==true ? user.name : "Name hidden (#{user.id})" ), user %>
		<% if current_user.admin? && !current_user?(user) %>
			| <%= link_to "delete", user, method: :delete,
				data: { confirm: "You sure?" } %>
			<% end %>
		</td>
		<td>
			<%= user.expertise %>
		</td>
	</tr>
