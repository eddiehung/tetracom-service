<tr>
	<td>
		<%= gravatar_for user, size: 52 if current_user?(user)||user.show_name==true %>
		<%= link_to ( current_user?(user)||user.show_name==true ? user.name : current_user.admin? ? user.name+" (user set hidden)" : "Name hidden (#{user.id})" ), user %>
		<% if current_user.admin? && !current_user?(user) %>
			| <%= link_to "edit", edit_user_path(user) %>
			| 
			<% if user.admin? %>
				<%= link_to "set_normal", set_normal_user_path(user) %>
			<% else %>
				<%= link_to "set_admin", set_admin_user_path(user) %>
			<% end %>
			| <%= link_to "delete", user, method: :delete, data: { confirm: "You sure?" } %>
		<% end %>
		</td>
		<td>
			<%= user.expertise %>
		</td>
</tr>
