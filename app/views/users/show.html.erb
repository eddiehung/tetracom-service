<% provide(:title, @user.name) %>
<div class="row">
	<aside class="span4">
	<section>
	<h1>
		<%= gravatar_for @user if (current_user?(@user)||@user.show_name==true) %>
		<%= current_user?(@user)||@user.show_name==true ? @user.name : "Hidden_#{@user.id}" %>
	</h1>
	</section>
	</aside>
	<div class="span8">
		<%= render 'follow_form' if signed_in? %>
		<%= render 'shared/info' if signed_in? %>
	</div>
</div>
