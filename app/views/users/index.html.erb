<% provide(:title, 'All users') %>
<h2>
	<%= User.count %> users in total, 
	<%= User.count(:all, :conditions => "expertise<>''") %> are experts.
</h2>

<p>Search by expertises:</p>
<%= form_tag(users_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "one expertise at a time" %>
	<%= submit_tag "Search", :name => nil %>
<% end %>

<%= button_to 'Show all', users_path %>

<%= will_paginate %>

<table class="table table-striped">
	<%= render @users %>
	<%= users.count %> returned.
</table>

<%= will_paginate %>

