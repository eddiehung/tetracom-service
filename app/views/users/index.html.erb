<% provide(:title, 'All users') %>
<h2>
	<%= User.count %> users in total, 
	<%= User.count(:all, :conditions => "expertise<>''") %> are experts
</h2>

<p>Search by expertises:</p>
<%= form_tag(users_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "expertise1, expertise 2, ..." %>
	<%= submit_tag "Search", :name => nil %>
	<%= submit_tag "Show all", :name => nil, params[:search] => "" %>
<% end %>

<%= will_paginate %>

<table class="table table-striped">
	<%= render @users %>
</table>

<%= will_paginate %>

