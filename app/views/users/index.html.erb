<% provide(:title, 'All users') %>
<h2>
	<%= User.count %> users in total, 
	<%= User.count(:all, :conditions => "expertise<>''") %> are experts.
</h2>

<p>Search by expertises:</p>
<%= form_tag(users_path, :method => "get", id: "search-form") do %>
	<%= text_field_tag :search, params[:search], placeholder: "one name or expertise at a time" %>
	<%= submit_tag "Search", :name => nil %>
<% end %>

<table>
	<tr>
		<td valign="middle"><%= @users.count %> results returned,</td> 
		<td valign="middle"><%= link_to "reset", users_path %></td>
	</tr>
</table>

<%= will_paginate %>

<table class="table table-striped">
	<%= render @users %>
</table>

<%= will_paginate %>

