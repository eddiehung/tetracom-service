<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
	<div class="span6 offset3">
		<%= form_for(:session, url: sessions_path) do |f| %>

			<%= f.label :email %>
			<%= f.text_field :email %>

			<%= f.label :password %>
			<%= f.password_field :password %>

			<%= f.submit "Sign in", class: "btn btn-success" %>
		<% end %>

		<p>New user? <%= link_to "Create a new account now!", signup_path %></p>
		<p><%= link_to "Forgotten password?", new_password_reset_path %></p>
		<p>For further questions, email: <a href="mailto:thomasccp@msn.com" target="_top">thomasccp@msn.com</a></p>
	</div>
</div>
